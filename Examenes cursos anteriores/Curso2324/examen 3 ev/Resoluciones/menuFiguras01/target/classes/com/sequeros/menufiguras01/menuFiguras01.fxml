<BorderPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sequeros.menufiguras01.MenuFiguras01Controller">
   <center>
      <StackPane fx:id="stackPane" prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox prefHeight="50.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="Archivo">
                     <items>
                        <MenuItem fx:id="exit" mnemonicParsing="false" text="Salir" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Dibujar">
                     <items>
                        <MenuItem fx:id="miCuadrado" mnemonicParsing="false" text="Cuadrado" />
                        <MenuItem fx:id="miElipse" mnemonicParsing="false" text="Elipse" />
                        <MenuItem fx:id="miCirculo" mnemonicParsing="false" text="CÃ­rculo" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                  <Button fx:id="botonCuadrado" mnemonicParsing="false">
                     <graphic>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="30.0" stroke="BLACK" strokeType="INSIDE" width="30.0" />
                     </graphic>
                  </Button>
                  <Button fx:id="botonElipse" mnemonicParsing="false">
                     <graphic>
                        <Ellipse fill="DODGERBLUE" radiusX="15.0" radiusY="10.0" stroke="BLACK" strokeType="INSIDE" />
                     </graphic>
                  </Button>
                  <Button fx:id="botonCirculo" mnemonicParsing="false">
                     <graphic>
                        <Circle fill="DODGERBLUE" radius="15.0" stroke="BLACK" strokeType="INSIDE" />
                     </graphic>
                  </Button>
                  <Button fx:id="botonSalir" mnemonicParsing="false" prefHeight="30.0" prefWidth="40.0" text="Salir" />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
