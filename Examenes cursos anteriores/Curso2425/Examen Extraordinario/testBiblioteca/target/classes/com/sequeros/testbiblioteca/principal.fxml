<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="610.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sequeros.testbiblioteca.PrincipalController">
   <left>
      <VBox prefHeight="405.0" prefWidth="30.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefWidth="30.0" spacing="15.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="100.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <StackPane prefHeight="200.0" prefWidth="550.0" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
         <children>
            <AnchorPane prefHeight="170.0" prefWidth="550.0">
               <children>
                  <Label layoutX="30.0" layoutY="15.0" text="Portada" />
                  <Label layoutX="300.0" layoutY="15.0" text="Contraportada" />
                  <ImageView fx:id="ivPortada" fitHeight="151.0" fitWidth="187.0" layoutX="30.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="ivContraportada" fitHeight="151.0" fitWidth="187.0" layoutX="300.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </bottom>
   <top>
      <VBox prefHeight="138.0" prefWidth="610.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu text="_Salida">
                     <items>
                        <MenuItem fx:id="miSalir" mnemonicParsing="false" onAction="#salirPulsado" text="Salir" />
                        <MenuItem fx:id="miSalirGrabando" mnemonicParsing="false" onAction="#salirGrabandoPulsado" text="Salir Grabando" />
                     </items>
                  </Menu>
                  <Menu text="_Acciones">
                     <items>
                        <MenuItem fx:id="miAdd" mnemonicParsing="false" onAction="#addPulsado" text="Añadir" />
                        <MenuItem fx:id="miModificar" mnemonicParsing="false" onAction="#modificarPulsado" text="Modificar" />
                        <MenuItem fx:id="miBorrar" mnemonicParsing="false" onAction="#borrarPulsado" text="Borrar" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="600.0">
               <items>
                  <Button fx:id="botonAdd" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPulsado" text="Añadir" />
                  <Button fx:id="botonModificar" mnemonicParsing="false" onAction="#modificarPulsado" text="Modificar" />
                  <Button fx:id="botonBorrar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#borrarPulsado" text="Borrar" />
                  <Button fx:id="botonSalirGrabando" mnemonicParsing="false" onAction="#salirGrabandoPulsado" text="Salir Grabando" />
               </items>
            </ToolBar>
            <Label text="Titulo a filtrar">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="titulo" />
            <Button fx:id="botonFiltrar" maxWidth="62.0" mnemonicParsing="false" onAction="#salvarPulsado" prefHeight="25.0" prefWidth="62.0" text="Filtrar">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="listviewComicteca" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
