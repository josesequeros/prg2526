            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="600.0">
               <items>
                  <Button fx:id="botonAdd" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addAccion" text="Añadir" />
